@model SportsPro.Models.RegistrationViewModel

@{
    ViewData["Title"] = "Get Customer";
}

<div class="container mt-4">
    <h1>Get Customer</h1>
    <form asp-action="Registrations" method="get">
        <div class="form-group mb-3">
            <label for="customerSelect" class="form-label">Customer</label>
            <select id="customerSelect" name="customerId" class="form-select" required>
                <option value="">-- Select a Customer --</option>
                @foreach (var customer in Model.Customers)
                {
                    <option value="@customer.CustomerID">@customer.FullName</option>
                }
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Select</button>
    </form>
</div>

<footer class="mt-5">
    <hr />
