@model IEnumerable<SportsPro.Models.Customer>

@{
    ViewBag.Title = "Customer List";
}

<h2>Customer Manager</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>City</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => customer.FullName)</td>
                <td>@Html.DisplayFor(modelItem => customer.Email)</td>
                <td>@Html.DisplayFor(modelItem => customer.City)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@customer.CustomerID" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@customer.CustomerID" class="btn btn-primary">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Add" class="btn btn-primary">Add Customer</a>
</div>
