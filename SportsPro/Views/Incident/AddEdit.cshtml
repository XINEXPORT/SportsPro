@model SportsPro.Models.Incident

@{
    ViewBag.Title = ViewBag.Action == "Edit" ? "Edit Incident" : "Add Incident";
}

<h2>@ViewBag.Title</h2>

<form asp-action="Save">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CustomerID"></label>
        <select asp-for="CustomerID" class="form-control" asp-items="@(new SelectList(ViewBag.Customers, "CustomerID", "FullName"))">
        </select>
        <span asp-validation-for="CustomerID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ProductID"></label>
        <select asp-for="ProductID" class="form-control" asp-items="@(new SelectList(ViewBag.Products, "ProductID", "Name"))">
        </select>
        <span asp-validation-for="ProductID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DateOpened"></label>
        <input asp-for="DateOpened" class="form-control" />
        <span asp-validation-for="DateOpened" class="text-danger"></span>
    </div>

    <div class="form-group mt-4">
        <button type="submit" class="btn btn-primary">@ViewBag.Action Incident</button>
        <a asp-action="List" class="btn btn-primary">Cancel</a>
    </div>
</form>

