@model SportsPro.Models.Incident

@{
    ViewBag.Title = "Add/Edit Incident";
}

<h2>@ViewBag.Action Incident</h2>

<form asp-action="Save">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CustomerID"></label>
        <select asp-for="CustomerID" class="form-control" asp-items="@(new SelectList(ViewBag.Customers, "CustomerID", "FullName"))">
        </select>
        <span asp-validation-for="CustomerID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ProductID"></label>
        <select asp-for="ProductID" class="form-control" asp-items="@(new SelectList(ViewBag.Products, "ProductID", "Name"))">
        </select>
        <span asp-validation-for="ProductID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TechnicianID"></label>
        <select asp-for="TechnicianID" class="form-control" asp-items="@(new SelectList(ViewBag.Technicians, "TechnicianID", "Name"))">
        </select>
        <span asp-validation-for="TechnicianID" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>

<a asp-action="List" class="btn btn-secondary">Cancel</a>
