 @model Product
@{
    string title = ViewBag.Action + " Product";
    ViewBag.Title = title;
}

<h1>@ViewBag.Title</h1>

<form asp-action="Save" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="row mb-3">
        <label asp-for="ProductCode" class="col-form-label col-md-2">Product Code</label>
        <div class="col">
            <input asp-for="ProductCode" class="form-control" />
        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="Name" class="col-form-label col-md-2">Name</label>
        <div class="col">
            <input asp-for="Name" class="form-control" />
        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="YearlyPrice" class="col-form-label col-md-2">Yearly Price</label>
        <div class="col">
            <input asp-for="YearlyPrice" class="form-control" />
        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="ReleaseDate" class="col-form-label col-md-2">Release Date</label>
        <div class="col">
            <input asp-for="ReleaseDate" class="form-control" />
        </div>
    </div>

    <input type="hidden" asp-for="ProductID" />

    <div class="row">
        <div class="col">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="List" class="btn btn-primary">Cancel</a>
        </div>
    </div>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}