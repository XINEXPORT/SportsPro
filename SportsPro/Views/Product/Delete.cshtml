@model SportsPro.Models.Product

@{
    ViewBag.Title = "Delete Product";
}

<div class="container">
    <h2 class="my-4">Delete Product</h2>
    <h3 class="text-danger">Are you sure you want to delete this product?</h3>

    @using (Html.BeginForm("Delete", "Product", FormMethod.Post))
    {
        @Html.HiddenFor(m => m.ProductID)

        <div class="form-group">
            @Html.LabelFor(model => model.ProductCode, new { @class = "control-label" })
            @Html.TextBoxFor(model => model.ProductCode, new { @class = "form-control", @readonly = "readonly" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "control-label" })
            @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @readonly = "readonly" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.YearlyPrice, new { @class = "control-label" })
            @Html.TextBoxFor(model => model.YearlyPrice, new { @class = "form-control", @readonly = "readonly" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ReleaseDate, new { @class = "control-label" })
            @Html.TextBoxFor(model => model.ReleaseDate, new { @class = "form-control", @readonly = "readonly" })
        </div>

        <div class="form-group mt-4">
            <button type="submit" class="btn btn-primary">Delete</button>
            <a href="@Url.Action("List", "Product")" class="btn btn-primary">Cancel</a>
        </div>
    }
</div>
